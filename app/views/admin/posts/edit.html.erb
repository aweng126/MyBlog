
<h1>Editing article</h1>

<%= form_for @post, url:admin_posts_url(@post) do |f| %>

    <p>
      <%= f.label :title%><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :author%><br>
      <%= f.text_field :author %>
    </p>

    <p>
      <%= f.label :content%><br>
      <%= f.text_field :content  %>
    </p>


    <p>
      <%= f.submit %>
    </p>

<% end %>

<%= link_to 'Back', admin_posts_path %>