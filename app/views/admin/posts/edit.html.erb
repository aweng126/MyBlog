
<h1>Editing article</h1>

<%= form_for @post,url:{action: "update",id:@post.id} do |f| %>

    <p>
      <%= f.label :title%><br>

      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :author%><br>
      <%= f.text_field :author %>
    </p>

    <!--选择分类界面-->
    <% Category.all.each do |category| %>
        <%= check_box_tag 'categories[]', category.id%>
        <%= label_tag category.name %>
    <% end %>


    <p>
      <%= f.label :content%><br>
      <%= f.kindeditor :content ,:window_onload => true  %>
    </p>

    <p>
      <%= f.submit  %>
    </p>

<% end %>

<%= link_to 'Back', admin_posts_path %>